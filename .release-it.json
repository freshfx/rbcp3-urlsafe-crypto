{
  "scripts": {
    "beforeStage": "npm-run-all build test",
    "beforeStart": "npm run build"
  },
  "git": {
    "commitMessage": "chore: release v%s",
    "requireCleanWorkingDir": false,
    "requireUpstream": true,
    "tagAnnotation": "release %s",
    "tagName": "v%s"
  },
  "github": {
    "release": false
  },
  "npm": {
    "access": "private",
    "publish": true,
    "tag": "latest"
  },
  "plugins": {
    "@release-it/conventional-changelog": {
      "preset": "angular",
      "infile": "CHANGELOG.md"
    }
  }
}
