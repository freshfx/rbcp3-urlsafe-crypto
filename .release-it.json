{
  "scripts": {
    "afterBump": "conventional-changelog -i CHANGELOG.md -s -r 0",
    "beforeStage": "npm-run-all build test",
    "beforeStart": "npm run build",
    "changelog": "npx conventional-changelog -u | tail -n +3"
  },
  "git": {
    "commitMessage": "chore: release v%s",
    "requireCleanWorkingDir": false,
    "requireUpstream": true,
    "tagAnnotation": "release %s",
    "tagName": "v%s"
  },
  "github": {
    "release": false
  },
  "increment": "conventional:angular",
  "npm": {
    "access": "private",
    "publish": true,
    "tag": "latest"
  },
  "pkgFiles": [
    "package.json",
    "package-lock.json"
  ]
}
